@charset "utf-8";

body,button,dd,dl,dt,fieldset,form,h1,h2,h3,h4,h5,h6,input,legend,li,ol,p,div,select,table,td,textarea,th,ul {
    margin: 0;
    padding: 0;

}
html{ 
	font-size: 50px;
	height: 100%;
} 
body,button,input,select,textarea{font-family: "微软雅黑",arial,sans-serif;}
body {
	width: 100%;
	height: 100%;
    min-width: 320px;
	/*max-width: 750px;*/
    position: relative;

}

a{ 
	color: #fff; 
	text-decoration: none;
}
ol,ul,li{ 
	list-style: none;
}
h1,h2,h3,h4,h4,h5,h6,b,strong{ 
	font-weight: normal;
}
i,em{ 
	font-style: normal;
}
img{ 
	border: 0; 
	vertical-align: top;
}
table{ 
	border-collapse: collapse;
}
.fl{ 
	float: left;
}
.fr{ 
	float: right;
}
.clearfix:after{ 
	display: block; 
	content: ''; 
	clear: both;
}
.clearfix{ 
	zoom: 1;
}

header{ 
	background: #1da0ef;
	height: 0.88rem;
}
.search{ 
	width: 0.88rem; 
	height: 100%; 
	margin-right:1.8rem;
	display:-webkit-box;
	-webkit-box-orient: horizontal;
	-webkit-box-pack:center; 
	-webkit-box-align:center; 
}
.searchbtn{ 
	display: block;
	width: 0.42rem;
	height: 0.42rem;
	background-image: url(../img/pics.png); 
	background-repeat: no-repeat;
	background-position: 0 0;
	background-size: 950%; 
}
.logo{ 
	width: 2.1rem; 
	height: 100%;
	margin: 0 auto;
}
.logo2{ 
	width: 1.88rem;
	height: 0.6rem;
	background-image: url(../img/logo2.png);
	background-size: 100%;
	margin: 0.1rem 0 0.1rem 0.2rem;
}
.logopic{ 
	display: block;
	width: 100%; 
	height: 100%;
	background: url(../img/logo.png) 0 center no-repeat;
	background-size: 100%;
}
.download{ 
	width: 1.6rem;
	height: 0.52rem;
	margin: 0.2rem 0.2rem 0 0;
}
.download2{ 
	width: 1.6rem;
	height: 0.52rem;
	margin: 0.13rem 0.2rem 0 0;
	border-radius: 30px;
	text-align: center;
	color: #fff;
	font-size: 0.12rem;
	line-height: 0.52rem;
	background: #1da0ef;
}
.downapp{ 
	display: block;
	width: 100%; 
	height: 100%;
	border-radius: 30px;
	text-align: center;
	color: #fff;
	font-size: 0.12rem;
	line-height: 0.52rem;
	background: #1470a7;
}
.nav{ 
	width: 100%;
	height: 0.76rem;
	border-bottom: 1px solid #ddd;
}
.nav .navitem{
	float: left; 
	width: 20%;
	font-size: 0.3rem;
	text-align: center;
	line-height: 0.76rem;
	color: #333;
	border-bottom: 2px solid transparent;
}
.nav .navitem.on{ 
	color: #2095dd;
	border-bottom: 2px solid #2095dd;
}