*, ::before, ::after {
    padding: 0;
    margin: 0;
    -webkit-tap-highlight-color: transparent;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

/*专辑样式*/
ul>.singBox_special:first-child{
    padding: 0.18rem 0 0.10rem 0.2rem;
}

.singBox_special {
    width: 100%;
    height: 1.51rem;
    padding: 0.10rem 0 0.10rem 0.2rem;
    display: flex;
    overflow: hidden;
    position: relative;
}

.singBox_special > .specialImgBox {
    width: 1.2rem;
    height: 1.2rem;
    overflow: hidden;
}

.singBox_special > .specialImgBox > img {
    width: 100%;
    display: inline-block;
}

.singBox_special > .Sp_singTex {
    flex: 1;
    margin-left: 0.19rem;
    height: 1.3rem;
    border-bottom: 0.01rem solid #e5e5e5;
}

.singBox_special > .Sp_singTex > .Sp_singTexUp > .singTexUp2 {
    padding-top: 0.14rem;
    font-size: 0.32rem;
    line-height: 0.54rem;
    color: #333;
}

.singBox_special > .Sp_singTex > .Sp_singTexUp > .singTime {
    font-size: 0.24rem;
    line-height: 0.46rem;
    color: #666;
}

.singBox_special > .Sp_singTex > .downLoad {
    position: absolute;
    top: 0;
    right: 0;
    box-sizing: content-box;
    float: left;
    width: 0.13rem;
    height: 0.23rem;
    padding: 0.58rem 0.30rem 0.56rem 0.3rem;
}

.singBox_special > .Sp_singTex > .downLoad > img {
    display: block;
    width: 100%;
}
