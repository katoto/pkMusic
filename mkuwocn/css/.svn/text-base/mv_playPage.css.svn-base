/*mv 样式*/
.singBox_MV {
    width: 100%;
    height: 1.51rem;
    padding: 0.18rem 0 0.12rem 0.2rem;
    display: flex;
    overflow: hidden;
    position: relative;

}

.singBox_MV > .specialImgBox {
    width: 1.92rem;
    height: 1.2rem;
    /*overflow: hidden;*/
}

.singBox_MV > .specialImgBox > img {
    width: 100%;
    display: inline-block;
}

.singBox_MV > .MV_singTex {
    flex: 1;
    margin-left: 0.14rem;
    height: 1.3rem;
    border-bottom: 0.01rem solid #e5e5e5;
}

.singBox_MV > .MV_singTex > .MV_singTexUp > .singTexUp2 {
    padding-top: 0.14rem;
    font-size: 0.32rem;
    line-height: 0.58rem;
    color: #333;
}

.singBox_MV > .MV_singTex > .MV_singTexUp > .singTime {
    font-size: 0.24rem;
    line-height: 0.50rem;
    color: #666;
}

.singBox_MV > .MV_singTex > .downLoad {
    position: absolute;
    top: 0;
    right: 0;
    box-sizing: content-box;
    float: left;
    width: 0.36rem;
    height: 0.36rem;
    padding: 0.67rem 0.27rem 0.46rem 0.27rem;
}

.singBox_MV > .MV_singTex > .downLoad > img {
    display: block;
    width: 100%;
}

/*底部box*/
.footerBox {
    width: 100%;
    height: 0.88rem;
    text-align: center;
    line-height: 0.88rem;
    color: #fff;
    background: #1da0ef;
    font-size: 0.3rem;
    position: fixed;
    left: 0;
    bottom: 0;
}
